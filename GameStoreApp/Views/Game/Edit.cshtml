@model GameEntry

<div class="container mt-4">
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<div class="card">
				<div class="card-header bg-primary text-white">
					<h2>Edit Game</h2>
				</div>
				<div class="card-body">
					<form asp-action="Edit" method="post">
						<div asp-validation-summary="All" class="text-danger"></div>
						<div class="form-group mb-3">
							<label asp-for="Title" class="form-label">Game Title</label>
							<input asp-for="Title" class="form-control" placeholder="Enter the Game Title" />
							<span asp-validation-for="Title"></span>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Description" class="form-label">Description</label> 
							<input asp-for="Description" row="5" class="form-control" placeholder="Enter the Game Description" />
							<span asp-validation-for="Description"></span>
						</div>
						<div class="form-group mb-3">
							<label asp-for="Created" class="form-label">Date</label>
							<input asp-for="Created" class="form-control" type="date" />
							<span asp-validation-for="Created"></span>
						</div>
						<div class="d-flex justify-content-between">
							<button type="submit" class="btn btn-primary">Edit</button>
							<a asp-controller="Game" asp-action="Index" class="btn btn-danger">Cancel</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial.cshtml" />
}
